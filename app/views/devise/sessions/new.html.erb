<div class="banner3">

<div class="container-sign-in">

  <div class="d-flex flex-column  justify-content-between align-items-left">
  <%= link_to "#" do %>
      <% end %>
  <h2 class="mt-4 title-signup">Welcome back</h2>
  <p class="mt-2 desc-signup">We are happy to see you again</p>
  </div>
  <div class="g-signin2" data-onsuccess="onSignIn"></div>

  <div class="text-on-line-col">
    <p class="text-on-line">or</p>
  </div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs sign-up-label">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <div class="d-flex justify-content-between">
      <div>
        <%= f.input :remember_me, as: :boolean, class: "body-remember"  if devise_mapping.rememberable?%>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>

      </div>
    </div>
    </br>
        <%= link_to "I forgot my password", new_password_path(resource_name), class: "body-sign-up" %>
      <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in with email", class: "bouton-login" %>
  </div>
<% end %>
</div>
</div>
